---
import { getAllTeams } from '@services/teams.js'
import CardBackgoundTeam from './CardBackgoundTeam.astro'
const teams = await getAllTeams()
---

<section class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8'>
	{
		teams.map((team) => {
			const { name, imageWhite, id } = team
			const gradient = `bg-${team.id}`
			return (
				<article class={`col-span-1 overflow-hidden rounded aspect-video ${gradient}`}>
					<a
						class='relative flex items-center justify-center h-full transition-all group hover:scale-110 gap-x-4 p-4'
						href={`/team/${id}`}
						title={`Ver equipo ${name}`}
					>
						<img
							class='brightness-[100] transition-all group-hover:scale-110 group-hover:brightness-200 z-10 w-28 h-28 [backface-visibility:hidden]'
							src={imageWhite}
							alt={`Logo de ${name}`}
						/>
						<h3 class='z-10 text-xl xl:text-2xl text-white font-title'>{name}</h3>

						<CardBackgoundTeam image={imageWhite} />
					</a>
				</article>
			)
		})
	}
</section>
