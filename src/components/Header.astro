---
import Logo from './Logo.astro'

const response = await fetch('https://kings-league.maycobarale.workers.dev/teams')
const teams = await response.json()
---

<header
	class='flex items-center w-screen bg-gradient-to-b from-[#ff6900] via-[#ff6900] to-[#e66000] p-8 gap-x-8'
>
	<Logo />

	<div class='flex flex-col h-full gap-4'>
		<nav>
			<ul class='flex gap-x-2 [&>li>a:hover]:scale-125'>
				{
					teams.map(({ id, name, image }) => (
						<li>
							<a href={`/team/${id}`} class='group transition block'>
								<img
									class='group-hover:drop-shadow-[0px_0px_8px_#fff] drop-shadow-[0px_0px_4px_#fff] aspect-square w-12'
									src={image}
									alt={`Escudo de ${name}`}
								/>
							</a>
						</li>
					))
				}
			</ul>
		</nav>

		<nav>
			<ul
				class='flex gap-x-4 text-white font-semibold text-md [&>li>a]:opacity-80 [&>li>a:hover]:opacity-100 [&>li>a:hover]:underline'
			>
				<li>
					<a href='/teams'>Equipos</a>
				</li>
				<li>
					<a href='/calendario'>Calendario</a>
				</li>
				<li>
					<a href='/estadisticas'>Estadisticas</a>
				</li>
				<li>
					<a href='/contacto'>Contacto</a>
				</li>
				<li>
					<a href='/reglamento'>Reglamento</a>
				</li>
			</ul>
		</nav>
	</div>
</header>
