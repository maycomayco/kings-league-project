---
import CardBackgoundTeam from './CardBackgoundTeam.astro'

const { title, subtitle, teamId, playerName, playerImage, teamName, teamImage } = Astro.props
const gradient = `bg-${teamId}`

const imageWhite = teamImage?.replace('.svg', '-inverse.svg')
---

<article class={`relative rounded p-5 ${gradient}`}>
	<div class='flex flex-col justify-between rounded gap-y-10'>
		<header>
			<h4 class='text-white font-title text-[80px] leading-none'>{title}</h4>
			<h5 class='uppercase text-orange-500 font-title text-2xl'>{subtitle}</h5>
		</header>

		<footer>
			<strong class='text-white font-bold text-xl'>{playerName}</strong>
			<p class='text-white opacity-80'>{teamName}</p>
		</footer>
	</div>
	<CardBackgoundTeam image={imageWhite} />
	<img
		class='absolute -right-2 bottom-0 w-60'
		src={`https://kings-league.maycobarale.workers.dev/static/players/${playerImage}`}
		alt={`Imagen de ${playerName}`}
	/>
</article>
