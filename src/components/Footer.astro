---
import Container from './Container.astro'
import kingsLeagueInfojobs from '../../assets/static/logos/kings-league-infojobs-footer.svg'
// import instagram from '/logos/social/instagram.svg'
// import tiktok from '../../assets/static/logos/social/tiktok.svg'
// import twitch from '../../assets/static/logos/social/twitch.svg'
// import twitter from '../../assets/static/logos/social/twitter.svg'
// import youtube from '../../assets/static/logos/social/youtube.svg'

const socialNetworks = [
	{
		name: 'Twitch',
		icon: '/logos/social/twitch.svg',
		href: 'https://www.twitch.tv/kingsleague'
	},
	{
		name: 'Twitter',
		icon: '/logos/social/twitter.svg',
		href: 'https://twitter.com/kingsleague'
	},
	{
		name: 'Tiktok',
		icon: '/logos/social/tiktok.svg',
		href: 'https://www.tiktok.com/@kingsleague'
	},
	{
		name: 'Instagram',
		icon: '/logos/social/instagram.svg',
		href: 'https://www.instagram.com/kingsleague'
	},
	{
		name: 'Youtube',
		icon: '/logos/social/youtube.svg',
		href: 'https://www.youtube.com/@KingsLeagueOfficial'
	}
]
---

<footer class='p-8 bg-black'>
	<Container>
		<section
			class='flex flex-col lg:flex-row justify-between gap-14 lg:gap-4 text-sm text-lig my-10 text-white'
		>
			<img
				class='block w-52 invert'
				src={kingsLeagueInfojobs}
				alt='logo de Kings League y Infojobs'
				width='208px'
				height='85px'
			/>
			<nav class='flex gap-24'>
				<div class='flex flex-col gap-3'>
					<span>Equipos</span>
					<span>Jugador 12</span>
					<span>Calendario</span>
				</div>
				<div class='flex flex-col gap-3'>
					<span>Estadísticas</span>
					<span>Reglamento</span>
				</div>

				<div class='flex flex-col gap-3'>
					<span>Faqs</span>
					<span>Draft</span>
				</div>
			</nav>
		</section>

		<section
			class='flex flex-col lg:flex-row justify-between gap-14 lg:gap-4 text-sm text-lig my-10 text-white'
		>
			<nav class='flex gap-4 invert align-center'>
				{
					socialNetworks.map(({ href, icon, name }) => (
						<a
							href={href}
							target='_blank'
							rel='noopener norefferer'
							class={`md:w-6 md:h-6 lg:w-11 lg:h-11 flex items-center justify-center rounded-full transition-all duration-500 [&>img]:hover:scale-125 [&>img]:hover:invert-0 [&>img]:hover:brightness-100`}
						>
							<img
								class={`w-5 transition-all duration-500 brightness-0 aspect-square`}
								src={icon}
								alt={`${name} Logo`}
								width='20'
								height='20'
								loading='lazy'
								decoding='async'
								fetchpriority='low'
							/>
						</a>
					))
				}
			</nav>

			<nav class='flex gap-5 justify-center lg:justify-around'>
				<span>Contacto</span>
				<span>Política de Privacidad</span>
				<span>Aviso Legal</span>
				<span>Política de Cookies</span>
			</nav>
		</section>
	</Container>
</footer>
